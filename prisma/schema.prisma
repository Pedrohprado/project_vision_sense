generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RiskCategory {
  HIGH
  MEDIUM
  LOW
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  age       String
  height    Float
  weight    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Device    Device[]
}

model Device {
  key          String         @id // vai ser vinculado com o c√≥digo do dispositivo
  name         String
  userId       String
  user         User           @relation(fields: [userId], references: [id])
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  DataReadings DataReadings[]
}

model DataReadings {
  id        String       @id @default(uuid())
  distance  Float
  danger    RiskCategory
  deviceId  String
  device    Device       @relation(fields: [deviceId], references: [key])
  createdAt DateTime     @default(now())
}
