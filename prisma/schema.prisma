generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RiskCategory {
  HIGH
  MEDIUM
  LOW
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  hashed_password String
  name            String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  Device          Device[]
}

model Device {
  key          String         @id //c√≥digo do dispositivo
  name         String
  userId       String
  user         User           @relation(fields: [userId], references: [id])
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  DataReadings DataReadings[]
}

model DataReadings {
  id        String       @id @default(uuid())
  distance  Float
  danger    RiskCategory
  deviceId  String
  device    Device       @relation(fields: [deviceId], references: [key])
  createdAt DateTime
}
